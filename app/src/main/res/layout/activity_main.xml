<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:text="登陆界面"
        android:textColor="#000000"
        android:paddingVertical="20dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:background="#1772b4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1">

        <TextView
            android:id="@+id/db_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:padding="26dp"
            android:text="账号：" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/db_account"
        android:id="@+id/dl_account"
        android:hint="请输入账号"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/db_password"
            android:padding="26dp"
            android:textColor="#000000"
            android:text="密码："/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/dl_password"
            android:layout_toRightOf="@id/db_password"
            android:hint="请输入密码"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/dl_register"
            android:textColor="#000000"
            android:text="注册" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/dl_forget"
            android:text="忘记密码？"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登陆"
        android:background="#5698c3"
        android:textSize="18sp"
        android:id="@+id/dl_log"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center_horizontal"/>
</LinearLayout>