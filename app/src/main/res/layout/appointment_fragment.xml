<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#1772b4"
        android:text="约吧"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_appointemnt_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="我们约吧"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:padding="15dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="我的约单"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:padding="15dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/oppointment_id_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="编号"
                android:layout_weight="0.9"/>
            <TextView
                android:id="@+id/oppointment_publish_date_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="发布时间"
                android:layout_weight="1.2" />
            <TextView
                android:id="@+id/oppointment_status_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="状态"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/oppointment_operation_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="操作"
                android:layout_weight="0.7"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/oppointment_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>
</RelativeLayout>